{
    "env": {
        "browser": false,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "key-spacing": [
            "warn",
            {
                "beforeColon": false,
                "afterColon": true,
                "mode": "strict"
            }
        ],
        "keyword-spacing": [
            "warn",
            {
                "before": true,
                "after": true
            }
        ],
        "lines-between-class-members": [
            "warn",
            "always",
            {
                "exceptAfterSingleLine": true
            }
        ],
        "no-lonely-if": [
            "error"
        ],
        "no-trailing-spaces": [
            "warn"
        ],
        "no-multiple-empty-lines": [
            "warn"
        ],
        "no-multi-spaces": [
            "warn"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "object-curly-spacing": [
            "warn",
            "always"
        ]
    }
}
